@model HotelBezkontaktowy.Models.Entities.RoomType
@{
    ViewData["Title"] = "Dodaj typ pokoju";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow mt-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-tag"></i> Dodaj typ pokoju</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateRoomType" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nazwa</label>
                            <input asp-for="Name" class="form-control" placeholder="np. Deluxe, Suite" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Opis (opcjonalnie)</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Zapisz
                            </button>
                            <a asp-action="Rooms" class="btn btn-outline-secondary">Anuluj</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model HotelBezkontaktowy.Models.ViewModels.RoomSearchVM
@{
    ViewData["Title"] = "Dostêpne pokoje";
}

<div class="container">
    <h2 class="mb-4"><i class="bi bi-building"></i> Wyszukaj pokój</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-2">
                        <label asp-for="DateFrom" class="form-label">Data od</label>
                        <input asp-for="DateFrom" type="date" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <label asp-for="DateTo" class="form-label">Data do</label>
                        <input asp-for="DateTo" type="date" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <label asp-for="Guests" class="form-label">Liczba goœci</label>
                        <input asp-for="Guests" type="number" min="1" max="20" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <label asp-for="RoomTypeId" class="form-label">Typ pokoju</label>
                        <select asp-for="RoomTypeId" asp-items="@ViewBag.RoomTypes" class="form-select">
                            <option value="">-- Wszystkie --</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="MinPrice" class="form-label">Cena od</label>
                        <input asp-for="MinPrice" type="number" step="0.01" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <label asp-for="MaxPrice" class="form-label">Cena do</label>
                        <input asp-for="MaxPrice" type="number" step="0.01" class="form-control" />
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Szukaj</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Wyczyœæ</a>
                </div>
            </form>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    @if (Model.Results.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var room in Model.Results)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Pokój @room.RoomNumber</h5>
                            <p class="card-text">
                                <span class="badge bg-info">@room.RoomType</span>
                            </p>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-people"></i> Max. goœci: @room.Capacity</li>
                                <li><i class="bi bi-cash"></i> @room.PricePerNight.ToString("C") / noc</li>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <a asp-controller="Reservations" asp-action="Create" asp-route-roomId="@room.Id" class="btn btn-success w-100">
                                <i class="bi bi-calendar-check"></i> Zarezerwuj
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Brak dostêpnych pokoi dla wybranych kryteriów.
        </div>
    }
</div>
